MIKROTIK_HOST=175.100.109.154
MIKROTIK_PORT=65428
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your_password_here

# Interface list (comma-separated)
# Specify which interfaces to monitor
INTERFACES=vlan2622,vlan2624

# Display mode: refresh (default) or append
# refresh = clear screen and redraw (like top/htop)
# append = append new lines (like tail -f)
DISPLAY_MODE=refresh

# Rate unit: auto (default), bps (bits per second), Bps (Bytes per second)
# auto = let FormatRate decide based on rateUnit
# bps = display in bits per second (multiplies by 8)
# Bps = display in Bytes per second
RATE_UNIT=auto

# Rate scale: auto (default), k, M, G
# auto = automatically scale based on value
# k = fixed kilobit/kilobyte scale
# M = fixed megabit/megabyte scale (good for high-speed interfaces)
# G = fixed gigabit/gigabyte scale
# Fixed scale displays with 7.2f format for decimal alignment
RATE_SCALE=auto

# Output mode: terminal (default) or log
# terminal = formatted output for interactive use
# log = log-style output for services/daemons
OUTPUT_MODE=terminal

# Debug mode: true or false (default)
# When enabled, prints the actual Mikrotik API commands being sent
DEBUG=false
